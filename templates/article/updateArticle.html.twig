{% extends 'base.html.twig' %}

{% block title "Modifier l'article " ~ art.id %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="wrapper">
    <div class="form_wrapper">
        <h1 class="form__title">Modifier l'article {{art.id}}</h1>

        <div class="form">
            {{form_start(updateArticleForm)}}
                {{form_widget(updateArticleForm)}}
                <input type="submit" class="form__btn" value="Modifier l'article">
            {{form_end(updateArticleForm)}}
        </div>
    </div>
</div>

{% endblock %}