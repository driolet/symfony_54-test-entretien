{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bonjour, bienvenue sur la liste des articles âœ…</h1>
    <p>Liste des articles : </p>
    {% for art in articles %}
        <article>
            <div>
                <h2>{{art.title}}</h2>
                <a href="{{path('app_articles_show', {id: art.id})}}">Voir l'article</a>
                <a href="{{path('app_articles_update', {id: art.id})}}">Modifier</a>
                <a href="{{path('app_articles_delete', {id: art.id})}}">Supprimer</a>
            </div>
        </article>
    {% endfor %}
</div>
{% endblock %}
