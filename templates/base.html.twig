<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
           <link rel="stylesheet" href="{{asset('css/styles.css')}}" type="text/css" />
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header>
        <nav class="wrapper navigation">
            <ul class="navigation__list">
                <li class="navigation__list__item"><a href='{{path('app_hello')}}'>Hello</a></li>
                <li class="navigation__list__item"><a href='{{path('app_articles')}}'>Articles</a></li>
                <li class="navigation__list__item"><a href='{{path('app_articles_add')}}'>Ajouter un article</a></li>
            </ul>
        </nav>
    </header>
        {% block body %}{% endblock %}
    </body>
</html>
